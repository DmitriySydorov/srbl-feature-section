{% assign block_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .subtitle-block {
    font-family: "Manrope", sans-serif;
    text-align: {{ block.settings.text_alignment }};
    margin-top: {{ block.settings.margin_top }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
  }

  .subtitle-block__text {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    line-height: 1.4;
    margin: 0;
    text-transform: {{ block.settings.text_transform }};
    {% if block.settings.max_width > 0 %}
      max-width: {{ block.settings.max_width }}px;
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .subtitle-block__text {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="subtitle-block" {{ block.shopify_attributes }}>
  {% if block.settings.subtitle != blank %}
    <p class="subtitle-block__text">{{ block.settings.subtitle }}</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Subtitle",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle text",
      "default": "Add your subtitle here"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 18
    },
    {
      "type": "range",
      "id": "font_size_mobile",
      "min": 10,
      "max": 28,
      "step": 1,
      "unit": "px",
      "label": "Font size on mobile",
      "default": 16
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Regular"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semibold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "select",
      "id": "text_transform",
      "label": "Text transform",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "uppercase",
          "label": "Uppercase"
        },
        {
          "value": "lowercase",
          "label": "Lowercase"
        },
        {
          "value": "capitalize",
          "label": "Capitalize"
        }
      ],
      "default": "none"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#6b7280"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 0,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Max width (0 for full width)",
      "default": 600
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top margin",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom margin",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Subtitle"
    }
  ]
}
{% endschema %}